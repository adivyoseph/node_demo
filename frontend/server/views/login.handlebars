<form action="/login" method="post">
    <div class="row">
        <div class="col-md-4 col-md-offset-4 form-group">
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12 form-group">
			<label for="login">Your company ID</label>
                        <input type="text" name="login" id="loginId" class="form-control" placeholder="Your company ID">
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 form-group">
			<label for="loginPass">Password</label>
                        <input type="password" id="loginPass" name="password" class="form-control" placeholder="Your Password">
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <button type="submit" name="login" class="btn btn-primary btn-block">Login</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>


